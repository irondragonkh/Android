<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="11"
    tools:context=".Class_Interface.InGame"
    >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:alignmentMode="alignMargins"
        android:columnCount="1"
        android:columnOrderPreserved="false"
        android:padding="16dp"
        android:rowCount="1">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/ImageView_SelectedHero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                tools:src="@drawable/selection_warrior_smaller" />
        </android.support.v7.widget.CardView>
    </GridLayout>

    <LinearLayout
        android:id="@+id/RelativeLayout_SelectedHeroName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextViewSelectedHeroName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Hero Name" />

        <ImageView
            android:id="@+id/ImageViewSelectedHeroIcon"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            tools:src="@drawable/warrior" />

    </LinearLayout>

    <GridLayout
        android:id="@+id/GridLayoutSelectedHeroStats"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:alignmentMode="alignMargins"
        android:columnCount="4"
        android:columnOrderPreserved="false"
        android:padding="16dp"
        android:rowCount="4"
        >

        <!--Row 1 /////////////////////////////////////////////////////////////////////////////////////////////// -->

        <!--Column 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/Selection_StatsSize"
                android:id="@+id/TextViewSelectedLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Selection_Level" />
        </LinearLayout>

        <!--Column 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity=""
            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/Selection_StatsSize"
                android:id="@+id/TextViewSelectedLevelValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="20" />

        </LinearLayout>

        <!--Column 3 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity=""
            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/Selection_StatsSize"
                android:id="@+id/TextViewSelectedClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/Selection_Class" />
        </LinearLayout>

        <!--Column 4 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity=""
            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/Selection_StatsSize"
                android:id="@+id/TextViewSelectedClassValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Warrior" />
        </LinearLayout>

        <!--Row 2 /////////////////////////////////////////////////////////////////////////////////////////////// -->

        <!--Column 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/Selection_StatsSize"
                android:id="@+id/TextViewHP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Selection_HP" />
        </LinearLayout>

        <!--Column 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity=""
            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/Selection_StatsSize"
                android:id="@+id/TextViewSelectedHPValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1500" />

        </LinearLayout>

        <!--Column 3 -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity=""
            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/Selection_StatsSize"
                android:id="@+id/TextViewLuck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/Selection_Luck" />

        </LinearLayout>

        <!--Column 4 -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity=""
            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/Selection_StatsSize"
                android:id="@+id/TextViewSelectedLuckValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="8" />
        </LinearLayout>

        <!--Row 3 /////////////////////////////////////////////////////////////////////////////////////////////// -->

        <!--Column 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/Selection_StatsSize"
                android:id="@+id/TextViewATK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Selection_ATK" />
        </LinearLayout>

        <!--Column 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity=""
            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/Selection_StatsSize"
                android:id="@+id/TextViewSelectedATKValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="87" />

        </LinearLayout>

        <!--Row 4 /////////////////////////////////////////////////////////////////////////////////////////////// -->

        <!--Column 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/Selection_StatsSize"
                android:id="@+id/TextViewDefence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Selection_Defence" />
        </LinearLayout>

        <!--Column 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:gravity=""
            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/Selection_StatsSize"
                android:id="@+id/TextViewSelectedDefenceValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="46" />

        </LinearLayout>

    </GridLayout>

    <TextView
        android:id="@+id/TextViewPointsLeft"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"

        tools:text="Points to spend:" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <Button
            android:id="@+id/ButtonAdPointsHP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="HadPointsHP"
            android:text="HP" />
        <Button
            android:id="@+id/ButtonAdPointsATK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="HadPointsATK"
            android:text="ATK"/>
        <Button
            android:id="@+id/ButtonAdPointsDefence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="HadPointsDefence"
            android:text="DEFENCE"/>

    </LinearLayout>

</LinearLayout>